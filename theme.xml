</image>

<image name="ImageFrame" extra="true">
	<color>ffffffEE</color>
	<path>./_art/frame.png</path>
	<origin>.5 .5</origin>
	<pos>0.8 0.4</pos>
	<maxSize>.59 .59</maxSize>
	<zIndex>90</zIndex>
</image>

<image name="sysbg1" extra="true">
	<color>ffffff</color>
	<path>./_art/bg.jpg</path>
