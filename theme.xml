	<pos>0 0</pos>
	<zIndex>100</zIndex>
</image>

<image name="sysbgpart" extra="true">
	<color>ffffff90</color>
	<path>./_art/bgpart.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>99</zIndex>
</image>

<image name="sysbg1" extra="true">
	<color>ffffff</color>
	<path>./_art/bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>70</zIndex>
</image>

<helpsystem name="help">
	<pos>0.02 0.94</pos>
    <textColor>731511</textColor>
    <iconColor>e2251780</iconColor>
    <fontPath>./_art/menu.ttf</fontPath>
    <fontSize>0.027</fontSize>
</helpsystem>

</view>

<view name="basic, detailed, video, grid">

<image name="sysbgtop" extra="true">
	<color>ffffffbb</color>
	<path>./_art/gametop.png</path>
