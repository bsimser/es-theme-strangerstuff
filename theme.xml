<theme>

	<formatVersion>4</formatVersion>
	
<feature supported="carousel">

		<view name="system">

			<!-- Custom Vertical System View -->
			<image name="console" extra="true">
				<maxSize>0.500 0.700</maxSize>
				<pos>0.5 0</pos>
			</image>

			<carousel name="systemcarousel">
				<type>Horizontal</type>
				<pos>0 .45</pos>
				<size>1 .5</size>
				<color>FFFFFF00</color>
				<logoScale>1.5</logoScale>
				<logoSize>0.2 0.2</logoSize>
				<logoAlignment>bottom</logoAlignment>
				<maxLogoCount>3</maxLogoCount>
				<zIndex>90</zIndex>
			</carousel>
			
			<text name="systemInfo">
				<pos>0 0.934</pos>
				<size>0.980 0.050</size>
				<backgroundColor>FFFFFF00</backgroundColor>
				<color>e2251780</color>
				<fontPath>./_art/menu.ttf</fontPath>
				<fontSize>0.03</fontSize>
				<alignment>right</alignment>
				<zIndex>110</zIndex>
			</text>

   </view>
</feature>


<view name="system">

<image name="sysbg0" extra="true">
	<color>ffffff</color>
	<path>./_art/white.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<color>000000</color>
	<zIndex>65</zIndex>
</image>

<image name="sysbgtop" extra="true">
