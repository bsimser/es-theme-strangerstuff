			<zIndex>90</zIndex>
		</text>

		<datetime name="md_lastplayed, md_releasedate">
			<color>731511</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/menu.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<zIndex>90</zIndex>
		</datetime>

		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<datetime name="md_releasedate">
			<pos>0.555 0.68</pos>
			<size>0.19 0.033</size>
		</datetime>

		<text name="md_genre">
			<pos>0.555 0.72</pos>
			<size>0.19 0.033</size>
		</text>

		<text name="md_developer">
			<pos>0.555 0.74</pos>
			<size>0.19 0.033</size>
		</text>

		<text name="md_lbl_players, md_players">
			<pos>0.555 0.7</pos>
			<size>0.09 0</size>
		</text>

		<text name="md_players">
			<pos>0.65 0.7</pos>
			<size>0.02 0</size>
		</text>
		
		<rating name="md_rating">
		<color>FFFFFF</color>
		<pos>0.555 0.77</pos>
		<size>0.255 0.068</size>
		<filledPath>./_art/full.png</filledPath>
		<unfilledPath>./_art/empty.png</unfilledPath>
		<zIndex>90</zIndex>
		</rating>

<!-- metadata end -->

		<text name="md_description">
			<color>F0F0F080</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/menu.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<lineSpacing>1.1</lineSpacing>
			<size>0.25 0.26</size>
			<pos>0.75 0.68</pos>
			<zIndex>90</zIndex>
		</text>
		
</view>


<view name="detailed">

<image name="md_image">
	<origin>.5 .5</origin>
	<pos>0.8 0.4</pos>
	<maxSize>.37 .5</maxSize>
	<zIndex>65</zIndex>
</image>

</view>

<view name="video">

<video name="md_video">
	<origin>.5 .5</origin>
	<pos>0.8 0.4</pos>
	<maxSize>.37 .5</maxSize>
	<delay>0.3</delay>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<zIndex>65</zIndex>
</video>

<image name="md_marquee">
	<origin>0 0.5</origin>
	<pos>0.6 0.083</pos>
	<maxSize>0.25 0.14</maxSize>
	<zIndex>95</zIndex>
</image>

</view>
</theme>