</image>

<textlist name="gamelist">
	<selectorColor>e2251780</selectorColor>
	<selectedColor>000000</selectedColor>
	<primaryColor>e2251780</primaryColor>
	<secondaryColor>f0f0f080</secondaryColor>
    <fontPath>./_art/menu.ttf</fontPath>	
	<forceUppercase>1</forceUppercase>
	<alignment>left</alignment>
	<pos>0.02 0.17</pos>
	<size>0.53 0.7</size>
	<fontSize>0.025</fontSize>
	<lineSpacing>1.25</lineSpacing>
	<zIndex>90</zIndex>
</textlist>

<helpsystem name="help">
	<pos>0.02 0.94</pos>
    <textColor>731511</textColor>
    <iconColor>e2251780</iconColor>
    <fontPath>./_art/menu.ttf</fontPath>
    <fontSize>0.026</fontSize>
</helpsystem>

<!-- metadata -->

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
			<color>e2251780</color>
